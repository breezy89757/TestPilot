@page "/demo"

<PageTitle>UI Sample - Demo</PageTitle>

<div class="demo-page">
    <h2>Component Demo</h2>
    <p class="page-description">This page is for previewing and testing UI components.</p>

    <section class="demo-section">
        <h3>Buttons</h3>
        <div class="button-group">
            <button class="btn btn-primary">Primary</button>
            <button class="btn btn-secondary">Secondary</button>
            <button class="btn btn-outline">Outline</button>
        </div>
    </section>

    <section class="demo-section">
        <h3>Form Input</h3>
        <div class="form-group">
            <label>Text Input</label>
            <input type="text" class="form-input" placeholder="Type something..." />
        </div>
    </section>
</div>

<style>
    .demo-page {
        max-width: 800px;
        margin: 0 auto;
    }

    .demo-page h2 {
        color: #667eea;
        margin-bottom: 0.5rem;
    }

    .page-description {
        color: #888;
        margin-bottom: 2rem;
    }

    .demo-section {
        background: #1a1a2e;
        border: 1px solid #2a2a40;
        border-radius: 12px;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
    }

    .demo-section h3 {
        color: #e0e0e0;
        font-size: 1rem;
        margin-bottom: 1rem;
        padding-bottom: 0.5rem;
        border-bottom: 1px solid #2a2a40;
    }

    .button-group {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .btn {
        padding: 0.6rem 1.2rem;
        border-radius: 6px;
        font-size: 0.9rem;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.2s;
    }

    .btn-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        color: #fff;
    }

    .btn-primary:hover {
        box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);
        transform: translateY(-2px);
    }

    .btn-secondary {
        background: #30304d;
        border: 1px solid #4a4a6a;
        color: #fff;
    }

    .btn-secondary:hover {
        background: #4a4a6a;
    }

    .btn-outline {
        background: transparent;
        border: 1px solid #667eea;
        color: #667eea;
    }

    .btn-outline:hover {
        background: #667eea;
        color: #fff;
    }

    .form-group {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .form-group label {
        color: #888;
        font-size: 0.85rem;
    }

    .form-input {
        background: #0f0f1a;
        border: 1px solid #3a3a5a;
        border-radius: 6px;
        padding: 0.75rem 1rem;
        color: #e0e0e0;
        font-size: 0.95rem;
        transition: border-color 0.2s;
    }

    .form-input:focus {
        outline: none;
        border-color: #667eea;
    }

    .form-input::placeholder {
        color: #555;
    }
</style>
