<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />
    <ResourcePreloader />
    <link rel="stylesheet" href="@Assets["app.css"]" />
    <link rel="stylesheet" href="@Assets["TestPilot.styles.css"]" />
    <ImportMap />
    <HeadOutlet @rendermode="InteractiveServer" />
</head>

<body>
    <Routes @rendermode="InteractiveServer" />
    <div id="components-reconnect-modal" class="my-reconnect-modal components-reconnect-hide">
        <div class="reconnect-content">
            <div class="reconnect-spinner"></div>
            <div class="reconnect-title">Connection Lost</div>
            <div class="reconnect-message">Attempting to reconnect to TestPilot...</div>
            <button onclick="window.location.reload()" class="reconnect-btn">Reload Page</button>
        </div>
    </div>
    <script src="@Assets["_framework/blazor.web.js"]"></script>
</body>

</html>
